@model IEnumerable<Eaton_DG_PCC.Models.AllStatus>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Remote data acquisition system</title>
    <meta name="keywords" content="远程通讯系统keywords">
    <meta name="description" content="远程通讯系统description">

    <link rel="stylesheet" type="text/css" href="~/Css/BigScreen/normalize.css">
    <link rel="stylesheet" type="text/css" href="~/Css/BigScreen/bigdata.css">
    <link rel="stylesheet" type="text/css" href="~/Css/BigScreen/swiper.min.css">
    <link rel="stylesheet" type="text/css" href="~/Css/BigScreen/alarm.css">
    <script src="~/Scripts/BigScreen/jquery-2.1.3.min.js"></script>
    <script type="text/javascript" src="~/Scripts/BigScreen/echarts.min.js"></script>
    <script src="~/Scripts/BigScreen/alarm.js"></script>



</head>
<body >

    <div id="title"></div>
    <!-- 亦庄数据中心 -->
    <div id="a_yz">
        <h1>亦庄数据中心</h1>
        <!-- 各级别告警数量统计 & 告警数量走势图-->
        <div id="a_yz_tj">
            <!-- 各级别告警数量统计 -->
            <div id="a_yz_sltj">
                <h2 class="_h2">总告警次数</h2>
                <div class="a_main">
                   @*<b class="a_bigfont">0</b>*@
                    <b class="a_bigfont">150</b>
                    <i class="a_unit">次</i>
                </div>
                <div class="a_infor">
                    <div id="a_xinxi">
                        <h3>信息</h3>
                        <b class="a_smallfont _infor">10</b>
                        <i>次</i>
                    </div>
                    <div id="a_qingwei">
                        <h3>轻微</h3>
                        <b class="a_smallfont _slight">20</b>
                        <i>次</i>
                    </div>
                    <div id="a_yiban">
                        <h3>一般</h3>
                        <b class="a_smallfont _normal">30</b>
                        <i>次</i>
                    </div>
                    <div id="a_zhongyao">
                        <h3>重要</h3>
                        <b class="a_smallfont _important">40</b>
                        <i>次</i>
                    </div>
                    <div id="a_jinji">
                        <h3>紧急</h3>
                        <b class="a_smallfont _urgent">50</b>
                        <i>次</i>
                    </div>
                </div>
            </div>
            <!-- 告警数量走势图 -->
            <div id="a_yz_slzs">
                <div class="unit_title">
                    <span class="_infor">信息</span>
                    <span class="_slight">轻微</span>
                    <span class="_normal">一般</span>
                    <span class="_important">重要</span>
                    <span class="_urgent">紧急</span>
                </div>
                <span class="unit_slzs_m">分钟</span>
                <div id="gjzszs-echarts-yz"></div>
            </div>
        </div>
        <!--告警内容TOP5 & 告警主机TOP5  -->
        <div id="a_yz_top">
            <div class="unit_title">
                <span class="_infor">信息</span>
                <span class="_slight">轻微</span>
                <span class="_normal">一般</span>
                <span class="_important">重要</span>
                <span class="_urgent">紧急</span>
            </div>
            <div class="a_neirong">

            </div>
            <div class="a_zhuji">

            </div>
        </div>
        <!-- 告警详情列表 -->
        <div id="a_yz_xqlb">
            <div class="unit_title">
                <span class="_infor">信息</span>
                <span class="_slight">轻微</span>
                <span class="_normal">一般</span>
                <span class="_important">重要</span>
                <span class="_urgent">紧急</span>
            </div>
            <div>
                <table id="a_yz_table"></table>
            </div>
        </div>
    </div>
    <!-- 廊坊数据中心 -->
    <div id="a_lf">
        <h1>廊坊数据中心</h1>
        <!-- 各级别告警数量统计 & 告警数量走势图-->
        <div id="a_lf_tj">
            <!-- 各级别告警数量统计 -->
            <div id="a_lf_sltj">
                <h2 class="_h2">总告警次数</h2>
                <div class="a_main">
                    <b class="a_bigfont">0</b>
                    <i class="a_unit">次</i>
                </div>
                <div class="a_infor">
                    <div id="b_xinxi">
                        <h3>信息</h3>
                        <b class="a_smallfont _infor">0</b>
                        <i>次</i>
                    </div>
                    <div id="b_qingwei">
                        <h3>轻微</h3>
                        <b class="a_smallfont _slight">0</b>
                        <i>次</i>
                    </div>
                    <div id="b_yiban">
                        <h3>一般</h3>
                        <b class="a_smallfont _normal">0</b>
                        <i>次</i>
                    </div>
                    <div id="b_zhongyao">
                        <h3>重要</h3>
                        <b class="a_smallfont _important">0</b>
                        <i>次</i>
                    </div>
                    <div id="b_jinji">
                        <h3>紧急</h3>
                        <b class="a_smallfont _urgent">0</b>
                        <i>次</i>
                    </div>
                </div>
            </div>
            <!-- 告警数量走势图 -->
            <div id="a_lf_slzs">
                <div class="unit_title">
                    <span class="_infor">信息</span>
                    <span class="_slight">轻微</span>
                    <span class="_normal">一般</span>
                    <span class="_important">重要</span>
                    <span class="_urgent">紧急</span>
                </div>
                <span class="unit_slzs_m">分钟</span>
                <div id="gjzszs-echarts-lf"></div>
            </div>
        </div>
        <!--告警内容TOP5 & 告警主机TOP5  -->
        <div id="a_lf_top">
            <div class="unit_title">
                <span class="_infor">信息</span>
                <span class="_slight">轻微</span>
                <span class="_normal">一般</span>
                <span class="_important">重要</span>
                <span class="_urgent">紧急</span>
            </div>
            <div class="a_neirong">

            </div>
            <div class="a_zhuji">

            </div>
        </div>
        <!-- 告警详情列表 -->
        <div id="a_lf_xqlb">
            <div class="unit_title">
                <span class="_infor">信息</span>
                <span class="_slight">轻微</span>
                <span class="_normal">一般</span>
                <span class="_important">重要</span>
                <span class="_urgent">紧急</span>
            </div>
            <div>
                <table id="a_lf_table">
                    <thead>
                        <tr>
                            <th>主机IP</th>
                            <th>主机名称</th>
                            <th>应用系统</th>
                            <th>发生时间</th>
                            <th>监控项</th>
                            <th>告警内容</th>
                            <th>告警时长</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- 时间 -->
    <div id="sj" class="sj"></div>

</body>



</html>
